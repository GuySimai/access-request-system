// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider      = "prisma-client-js"
  output        = "./generated/client"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  EMPLOYEE
  APPROVER
}

enum RequestStatus {
  PENDING
  APPROVED
  DENIED
}

model Employee {
  id                 String            @id @default(uuid())
  email              String            @unique
  name               String
  password           String
  role               Role              @default(EMPLOYEE)
  submittedRequests  AccessRequest[]   @relation("RequestorRelation")
  requestsForSubject AccessRequest[]   @relation("SubjectRelation")
  decisions          AccessRequest[]   @relation("ApproverDecisions")
  metadata           EmployeeMetadata?
  createdAt          DateTime          @default(now())
}

model EmployeeMetadata {
  id                   String   @id @default(uuid())
  employee             Employee @relation(fields: [employeeId], references: [id])
  employeeId           String   @unique
  department           String
  jobTitle             String
  tenureMonths         Int
  updatedAt            DateTime @updatedAt
}

model AccessRequest {
  id          String        @id @default(uuid())
  requestor   Employee      @relation("RequestorRelation", fields: [requestorId], references: [id])
  requestorId String
  subject     Employee      @relation("SubjectRelation", fields: [subjectId], references: [id])
  subjectId   String
  resource    String
  reason      String
  status      RequestStatus @default(PENDING)
  approver    Employee?     @relation("ApproverDecisions", fields: [decisionBy], references: [id])
  decisionBy  String?
  decisionAt  DateTime?
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  aiEvaluation AiEvaluation?

  @@index([requestorId])
  @@index([subjectId])
  @@index([status])
}

model AiEvaluation {
  id              String        @id @default(uuid())
  requestId       String        @unique
  accessRequest   AccessRequest @relation(fields: [requestId], references: [id])
  recommendation  String        
  reasoning       String        
  confidenceScore Float         
  createdAt       DateTime      @default(now())
}